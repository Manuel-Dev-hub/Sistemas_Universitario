@model UniversidadWEB.Models.Nota

@{
    ViewData["Title"] = "Detalles de Nota";
}

<div class="card">
    <div class="card-header">
        <h2 class="card-title">@ViewData["Title"]</h2>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Alumno</dt>
            <dd class="col-sm-9">@Model.Asignacion.Alumno?.NombreCompleto</dd>

            <dt class="col-sm-3">Curso</dt>
            <dd class="col-sm-9">@Model.Asignacion.Curso?.Nombre</dd>

            <dt class="col-sm-3">Ciclo</dt>
            <dd class="col-sm-9">@Model.Asignacion.Ciclo</dd>

            <dt class="col-sm-3">Año</dt>
            <dd class="col-sm-9">@Model.Asignacion.Anio</dd>

            <dt class="col-sm-3">Calificación</dt>
            <dd class="col-sm-9">@Model.Calificacion.ToString("N2")</dd>

            <dt class="col-sm-3">Fecha de Registro</dt>
            <dd class="col-sm-9">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>
        </dl>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.NotaID" class="btn btn-warning">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </div>
</div>