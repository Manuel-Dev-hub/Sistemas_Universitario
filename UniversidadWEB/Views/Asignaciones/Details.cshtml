@using UniversidadWEB
@using UniversidadWEB.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model UniversidadWEB.Models.Asignacion
@{
    ViewData["Title"] = "Detalles de Asignación";
}

<div class="card">
    <div class="card-header">
        <h2 class="card-title">@ViewData["Title"]</h2>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Alumno</dt>
            <dd class="col-sm-9">@Model.Alumno?.Nombres @Model.Alumno?.apellido</dd>

            <dt class="col-sm-3">Curso</dt>
            <dd class="col-sm-9">@Model.Curso?.Nombre</dd>

            <dt class="col-sm-3">Catedrático</dt>
            <dd class="col-sm-9">@Model.Catedratico?.Nombres @Model.Catedratico?.Apellidos</dd>

            <dt class="col-sm-3">Ciclo</dt>
            <dd class="col-sm-9">@Model.Ciclo</dd>

            <dt class="col-sm-3">Año</dt>
            <dd class="col-sm-9">@Model.Anio</dd>

            <dt class="col-sm-3">Fecha de Asignación</dt>
            <dd class="col-sm-9">@Model.FechaAsignacion.ToShortDateString()</dd>
        </dl>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.AsignacionID" class="btn btn-warning">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </div>
</div>